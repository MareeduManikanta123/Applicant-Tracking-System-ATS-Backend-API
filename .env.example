# Application Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ats_db

# JWT Configuration
# IMPORTANT: This must be set. A strong, random secret is required for production.
# Never commit actual values to version control.
JWT_SECRET=your-secret-jwt-key-here-change-in-production

# Redis Configuration
# Used for message queue (BullMQ) and caching
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# REDIS_PASSWORD=optional-password-for-redis  # Uncomment if Redis requires authentication

# Email Service Configuration
# Using Nodemailer with Gmail/SMTP
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@ats-system.com

# For development emails sent to console instead of actual SMTP:
# EMAIL_SERVICE=console

# Queue Configuration
# BullMQ settings
QUEUE_WORKER_ENABLED=true
QUEUE_WORKER_CONCURRENCY=2

# Logging
# LOG_LEVEL=debug  # Options: debug, info, warn, error

# CORS Configuration (optional)
# CORS_ORIGIN=http://localhost:3000,http://localhost:5173
