datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  CANDIDATE
  RECRUITER
  HIRING_MANAGER
}

model Company {
  id   Int    @id @default(autoincrement())
  name String

  users User[]
  jobs  Job[]
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  role      Role
  companyId Int?

  candidateApplications Application[]        @relation("CandidateApplications")
  applicationChanges    ApplicationHistory[] @relation("ApplicationChanges")

  createdAt DateTime @default(now())
  company   Company? @relation(fields: [companyId], references: [id])
}

enum JobStatus {
  OPEN
  CLOSED
}

model Job {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  status      JobStatus

  companyId Int
  company   Company @relation(fields: [companyId], references: [id])

  applications Application[] // ðŸ‘ˆ ADD THIS
}

model Application {
  id    Int              @id @default(autoincrement())
  stage ApplicationStage @default(APPLIED)

  jobId Int
  job   Job @relation(fields: [jobId], references: [id])

  candidateId Int
  candidate   User @relation("CandidateApplications", fields: [candidateId], references: [id])

  createdAt DateTime @default(now())

  histories ApplicationHistory[]
}

model ApplicationHistory {
  id            Int              @id @default(autoincrement())
  applicationId Int
  fromStage     ApplicationStage
  toStage       ApplicationStage
  changedById   Int

  application Application @relation(fields: [applicationId], references: [id])
  changedBy   User        @relation("ApplicationChanges", fields: [changedById], references: [id])

  createdAt DateTime @default(now())
}

enum ApplicationStage {
  APPLIED
  SCREENING
  INTERVIEW
  OFFER
  HIRED
  REJECTED
}
